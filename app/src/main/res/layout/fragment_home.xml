<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#000" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#FF5722"

        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#E95121"

        >

        <TextView
            android:id="@+id/tv_click_next_Activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap Here for Urjas Services"
            android:padding="20dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#fff"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="40dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name of Customer"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="Jyoti Arun Sharma"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="IVRS/ Customer ID"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textColor="#000"
            android:text="1232334457"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"

            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:background="@drawable/ic_menu_manage"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_width="wrap_content"
                android:background="@drawable/ic_menu_manage"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_width="wrap_content"
                android:background="@drawable/ic_menu_manage"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>